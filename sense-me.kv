#:kivy 1.0.9
#:import hex kivy.utils.get_color_from_hex
SenseMe:
    LoginPage:
    UserPage:

<LoginPage>
    canvas:
        Color:
            rgba: hex('#CCFFCC')
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        Label:
            id: appLabel
            halign: 'center'
            color: 0,0,0,1
            size_hint_y: None
            size: self.texture_size
            text: app.name.capitalize()

        GridLayout:
            cols:2
            rows:2
            padding:[280,300]
            Label:
                id: userLabel
                color: 0,0,0,1
                size_hint: (.4, None)
                text: "Username: "

            TextInput:
                id: userInput
                color: 0,0,0,1
                size_hint: (.4,None)
                width: 0.5

            Label:
                id: passLabel
                color: 0,0,0,1
                size_hint: (.4, None)
                text: "Password: "
        
            TextInput:
                id: passInput
                color: 0,0,0,1
                size_hint: (.4,None)
                width: 0.5

        Button:
            size_hint_y: None
            text: "go"
            on_release: app.root.current = 'user'

<UserPage>
    Button:
        text: "back"
        on_release: app.root.current = 'login'
            