#:kivy 1.0.9
#:import hex kivy.utils.get_color_from_hex
SenseMe:
    LoginPage:
    SignUpPage:
    UserPage:

<LoginPage>
    canvas:
        Color:
            rgba: hex('#CCFFCC')
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        Label:
            id: appLabel
            halign: 'center'
            color: 0,0,0,1
            padding:[80,30]
            size_hint_y: None
            size: self.texture_size
            text: app.name.capitalize()

        GridLayout:
            cols:2
            rows:2
            padding:[0,30,100,30]
            Label:
                id: userLabel
                color: 0,0,0,1
                size_hint: (.25, None)
                text: "Username: "

            TextInput:
                id: userInput
                color: 0,0,0,1
                height: self.minimum_height*2
                hint_text: "test"
                multiline: False
                size_hint: (.5,None)
                width: 0.5

            Label:
                id: passLabel
                color: 0,0,0,1
                hint_text: "test123"
                size_hint: (.25, None)
                text: "Password: "
        
            TextInput:
                id: passInput
                color: 0,0,0,1
                height: self.minimum_height*2
                multiline: False
                size_hint: (.5,None)
                width: 0.5

        Bubble:
            id: alert
            size_hint_y: 0
            Label:
                id: alertLabel
                color: hex('#ffffff')
                size_hint: (.25, None)
                text: ""

        Button:
            size_hint_y: None
            text: "Sign Up"
            on_release: root.changePage(self)

        Button:
            size_hint_y: None
            text: "go"
            on_release: root.runLogin(self)

<SignUpPage>
    canvas:
        Color:
            rgba: hex('#CCFFCC')
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        Label:
            id: appLabelTwo
            halign: 'center'
            color: 0,0,0,1
            padding:[80,30]
            size_hint_y: None
            size: self.texture_size
            text: app.name.capitalize()

        GridLayout:
            cols:2
            rows:2
            padding:[0,30,100,30]
            Label:
                id: newUserLabel
                color: 0,0,0,1
                size_hint: (.25, None)
                text: "Username: "

            TextInput:
                id: newUserInput
                color: 0,0,0,1
                height: self.minimum_height*2
                hint_text: "test"
                multiline: False
                size_hint: (.5,None)
                width: 0.5

            Label:
                id: newPassLabel
                color: 0,0,0,1
                hint_text: "test123"
                size_hint: (.25, None)
                text: "Password: "
        
            TextInput:
                id: newPassInput
                color: 0,0,0,1
                height: self.minimum_height*2
                multiline: False
                size_hint: (.5,None)
                width: 0.5

        Bubble:
            id: alertTwo
            size_hint_y: 0
            Label:
                id: alertLabelTwo
                color: hex('#ffffff')
                size_hint: (.25, None)
                text: ""

        Button:
            size_hint_y: None
            text: "Register"
            on_release: root.runRegister(self)

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            id: backBtn
            size_hint: (None, None)
            text: "Login"
            on_release: root.changePage(self)

<UserPage>
    canvas:
        Color:
            rgba: hex('#DDDDDD')
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        TextInput:
            id: moodInput
            color: 0,0,0,1
            height: self.minimum_height*2
            hint_text: "Mood"
            pos_hint: {'x':.25, 'y':.7}
            multiline: False
            size_hint: (.5,None)
            width: 0.5
        Label:
            id: moodAlert
            color: hex('#ffffff')
            pos_hint: {'x':.25, 'y':.5}
            size_hint: (.5, None)
            text: ""
            text_size: self.width, None
            height: self.texture_size[1]
        Button:
            id: moodBtn
            text: "Whats your Mood?"
            color: 0, 0, 0, 1
            on_release: root.getMood(self)
            pos_hint: {'x':.25, 'y':.2}
            size_hint: (.5,None)
            background_color: 0, 0, 0, 0
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            id: logoutBtn
            size_hint: (None, None)
            text: "Logout"
            on_release: root.logout(self)


